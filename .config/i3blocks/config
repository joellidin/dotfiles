[volume]
#label=♪
# label=Volume
interval=once
markup=pango
signal=10
DEFAULT_COLOR="#bdae93"
MUTED_COLOR="#f7555E"
#STEP=5%


[custom-time]
interval=5

[battery]
command=$HOME/.local/bin/battery
interval=5
markup=pango
# min_width=bat: ■■■■■
min_width=bat:
# Discharging colors low to high
#C1=#FF0027
#C2=#FF3B05
#C3=#FFB923
#C4=#FFD000
#C5=#E4FF00
#C6=#ADFF00
#C7=#6DFF00
#C8=#10BA00
#CHARGING_COLOR=#00AFE3
#FULL_COLOR=#FFFFFF
#AC_COLOR=#535353

[shutdown_menu]
full_text= 
